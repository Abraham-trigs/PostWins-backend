{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "../../packages/core/src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
