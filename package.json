{
  "name": "@posta/backend",
  "version": "2.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start:mock": "cross-env MODE=MOCK node dist/server.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "check:lifecycle-law": "grep -R \"data: {[^}]*lifecycle\" src && echo \"‚ùå Direct lifecycle write detected\" && exit 1 || exit 0"
  },
  "dependencies": {
    "@posta/core": "workspace:*",
    "@prisma/client": "^6.19.2",
    "express": "^5.2.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.5",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.2",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  }
}
